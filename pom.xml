  <description>Data-Quality Checks</description>

  <properties>
      <solr.version>8.8.2</solr.version>
      <slf4j.version>1.6.4</slf4j.version>
  </properties>



<dependencies>

    <dependency>
        <groupId>org.apache.solr</groupId>
